@model NewMovies.Models.RegisterViewModel

<div class="login-container">
    <div class="login-box">
        <h2 class="login-title">Đăng ký</h2>
        <form asp-action="Register" method="post" class="login-form">
            <div class="form-group">
                <label asp-for="TaiKhoan" class="control-label">Tên đăng nhập</label>
                <input asp-for="TaiKhoan" class="form-control" required />
                <span asp-validation-for="TaiKhoan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatKhau" class="control-label">Mật khẩu</label>
                <input asp-for="MatKhau" type="password" class="form-control" required />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ConfirmMatKhau" class="control-label">Nhập lại mật khẩu</label>
                <input type="password" id="ConfirmMatKhau" name="ConfirmMatKhau" class="form-control" required />
                <span asp-validation-for="ConfirmMatKhau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="login-btn">Đăng ký</button>
        </form>
        <div class="login-footer">
            <p>Đã có tài khoản? <a asp-controller="Home" asp-action="Login">Đăng nhập ngay</a></p>
        </div>
    </div>
</div>

